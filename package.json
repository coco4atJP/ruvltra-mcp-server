{
  "name": "ruvltra-mcp-server",
  "version": "0.2.0",
  "description": "RuvLTRA MCP Server for fast and low-cost vibe coding",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "ruvltra-mcp-server": "dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coco4atJP/ruvltra-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/coco4atJP/ruvltra-mcp-server/issues"
  },
  "homepage": "https://github.com/coco4atJP/ruvltra-mcp-server#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepublishOnly": "npm test && npm run build",
    "test": "run-s test:smoke test:pool test:resilience test:sona",
    "test:smoke": "tsx tests/test-mcp.ts",
    "test:parallel": "tsx tests/test-parallel.ts",
    "test:pool": "tsx tests/test-timeout-backpressure.ts",
    "test:resilience": "tsx tests/test-http-resilience.ts",
    "test:sona": "tsx tests/test-sona-persist.ts"
  },
  "keywords": [
    "mcp",
    "ruvltra",
    "claude",
    "vibe-coding",
    "json-rpc",
    "worker-pool",
    "llm"
  ],
  "author": "ruvnet",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "@ruvector/ruvllm": "^2.5.1",
    "dotenv": "^16.4.5",
    "node-llama-cpp": "^3.16.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.3",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  }
}
